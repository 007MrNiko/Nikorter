<MyProgram>

    #outside: inside
    code: code
    console: console
    robot: robot
    path: path

    BoxLayout:
        size: root.width, root.height
        BoxLayout:
            orientation: "vertical"

            BoxLayout:
                size_hint_y: None
                height: 50
                Button:
                    size_hint_x: None
                    width: 150
                    text: "Open file"
                    on_press: root.open_from_file()
                TextInput:
                    id: path
                    text: "/Volumes/Niko/Python/Nikorter/examples/example1.txt"
                    multiline: False


            CodeInput:
                id: code

            CodeInput:
                id: console
                size_hint_y: None
                height: 150

            BoxLayout:
                size_hint_y: None
                height: 100
                Button:
                    text: "Interpret"
                    on_press: root.start_interpret()
                Button:
                    text: "Randomize"
                    on_press: root.randomize_position()
                Button:
                    text: "Reset"
                    on_press: root.reset_position()

        Widget:
            id: robot
            pos: 0,0
            rgb: (0,0.5,1)
            canvas.before:
                Rectangle:
                    source: '/Volumes/Niko/Python/Nikorter/project/resources/body_main.png'
                    size: self.size
                    pos: (1000,0)
                Color:
                    rgb: self.rgb
                Rectangle:
                    # TODO add texture to robot
                    source: '/Volumes/Niko/Python/Nikorter/project/resources/robot_main.png'
                    pos: self.pos
                    size: (100,100)
