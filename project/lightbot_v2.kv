<MyProgram>

    #outside: inside
    code: code
    console: console
    robot: robot

    BoxLayout:
        size: root.width, root.height
        BoxLayout:
            orientation: "vertical"

            CodeInput:
                id: code

            CodeInput:
                id: console

            BoxLayout:
                size_hint_y: None
                height: 100
                Button:
                    text: "Interpret"
                    on_press: root.start_interpret()
                Button:
                    text: "Reset"
                    on_press: root.reset_position()

        Widget:
            id: robot
            pos: 0,0
            rgb: (0,0.5,1)
            canvas.before:
                Color:
                    rgb: self.rgb
                Rectangle:
                    # TODO add texture to robot
                    #source: 'bg.png'
                    pos: self.pos
                    size: (100,100)
