<MyProgram>

    #outside: inside
    code: code
    console: console
    robot: robot
    path: path

    BoxLayout:
        size: root.width, root.height
        BoxLayout:
            orientation: "vertical"
            size_hint_x: None
            width: 1000
            BoxLayout:
                size_hint_y: None
                height: 50
                Button:
                    size_hint_x: None
                    width: 150
                    text: "Open file"
                    on_press: root.open_from_file()
                TextInput:
                    id: path
                    text: "/Volumes/Niko/Python/Nikorter/examples/example1.txt"
                    multiline: False


            CodeInput:
                id: code

            CodeInput:
                id: console
                size_hint_y: None
                height: 150

            BoxLayout:
                size_hint_y: None
                height: 100
                on_parent: root.reset_position()
                Button:
                    text: "Interpret"
                    on_press: root.start_interpret()
                Button:
                    text: "Randomize"
                    on_press: root.randomize_position()
                Button:
                    text: "Reset"
                    on_press: root.reset_position()

        Widget:
            id: robot
            pos: 0,0
            rgb: (0,0.5,1)
            canvas.before:

                Color:
                    rgb: (0.07450980392, 0.07450980392, 0.07450980392)
                Rectangle:
                    # texture: self.ellipse_image.texture
                    size: self.size
                    pos: (1000,0)


                Color:
                    rgb: self.rgb
                Rectangle:
                    source: '/Volumes/Niko/Python/Nikorter/project/resources/textures/background/body_border_hex.png'
                    size: self.size
                    pos: (1000,0)

                Color:
                    rgb: (1, 1, 1)
                Rectangle:
                    source: '/Volumes/Niko/Python/Nikorter/project/resources/textures/background/body_positions.png'
                    size: self.size
                    pos: (1000,0)

                Color:
                    rgb: self.rgb
                Rectangle:
                    source: '/Volumes/Niko/Python/Nikorter/project/resources/textures/background/body_border.png'
                    size: self.size
                    pos: (1000,0)

                Rectangle:
                    # TODO add texture to robot
                    source: '/Volumes/Niko/Python/Nikorter/project/resources/textures/robot/robot_main.png'
                    pos: self.pos
                    size: (100,100)


