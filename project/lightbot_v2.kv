<MyProgram>

    #outside: inside
    code: code
    console: console
    robot: robot

    BoxLayout:
        size: root.width, root.height
        BoxLayout:
            orientation: "vertical"

            CodeInput:
                id: code

            CodeInput:
                id: console


            Button:
                text: "Interpret"
                size_hint_y: None
                height: 100
                on_press: root.get_code(), root.set_console(), root.move_robot()

        Widget:
            id: robot
            pos: 0,0
            canvas:
                Color:
                    rgb: (0,0.5,1)
                Rectangle:
                    # TODO add texture to robot
                    #source: 'bg.png'
                    pos: self.pos
                    size: (100,100)
